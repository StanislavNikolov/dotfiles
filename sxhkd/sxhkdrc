###### wm agnostic
super + Return
	sakura
super + {d, c}
	rofi -show {run, ssh} -terminal sakura
super + w
	scrshot

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Turn on laptop's screen for some reason
XF86Display
	xrandr --output LVDS1 --auto && notify-send "Screen recovered"

# lock
super + shift + {d, s}
	lock {nothing, suspend}
XF86Sleep
	lock nothing

# brightness
{XF86MonBrightnessDown, XF86MonBrightnessUp}
	xbacklight -steps 20 -time 50 {-dec, -inc} 10

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
	volctl {inc, dec}



###### BSPWM - BASICS
# Focus mode
super + h
	bspc node -f west || bspc monitor -f west
super + j
	bspc node -f south || bspc monitor -f south
super + k
	bspc node -f north || bspc monitor -f north
super + l
	bspc node -f east || bspc monitor -f east

# close window
super + shift + c
	bspc node -c

# basic presel
super + v
	bspc node -p south; bspc node -o 0.5;
super + b
	bspc node -p east; bspc node -o 0.5;

# goto, sendto desktop
super + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {1,2,3,4,5,6,7,8,9,0}
super + shift + {1,2,3,4,5,6,7,8,9,0}
	bspc node -d {1,2,3,4,5,6,7,8,9,0}

#resizing non-floating windows
super + r : h
	bspc node @west -r +20 || bspc node @east -r +20
super + r : j
	bspc node @north -r +20 || bspc node @south -r +20
super + r : k
	bspc node @north -r -20 || bspc node @south -r -20
super + r : l
	bspc node @west -r -20 || bspc node @east -r -20

# toggle floating
super + f
	bspc node -t '~floating'

# move, resize when floating
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}
super + @button{1-3}
	bspc pointer -u
super + !button{1-3}
    bspc pointer -t %i %i



###### BSPWM - ADVANCED
# swap the current node with the biggest
super + g
	bspc node -s biggest

# rotate
super + e
	bspc node -R 90

# sel parent
super + a
	bspc node -f @parent

# flip
super + o
	bspc node @north -F horizontal || bspc node @south -F horizontal
super + i
	bspc node @west -F vertical || bspc node @east -F vertical

# Swap node
# If no node exist, send node to monitor instead
super + shift + h
  if ! bspc node -s west.local; then bspc node -m west && bspc node $(bspc query -N -n last) -f; fi
super + shift + l
  if ! bspc node -s east.local; then bspc node -m east && bspc node $(bspc query -N -n last) -f; fi
super + shift + k
  if ! bspc node -s north.local; then bspc node -m north && bspc node $(bspc query -N -n last) -f; fi
super + shift + j
  if ! bspc node -s south.local; then bspc node -m south && bspc node $(bspc query -N -n last) -f; fi

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# presel dir
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# send to presel
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# cancel the preselect
super + ctrl + space
	bspc node -p cancel
